{
	"name": "onion-test-ingestion-poc",
	"version": "1.0.0",
	"main": "index.js",
	"scripts": {
		"test": "jest",
		"test:coverage": "jest --coverage"
	},
	"devDependencies": {
		"jest": "^29.0.0",
		"jest-junit": "^16.0.0"
	},
	"jest": {
		"testEnvironment": "node",
		"reporters": [
			"default",
			[
				"jest-junit",
				{
					"outputName": "junit.xml"
				}
			]
		],
		"collectCoverageFrom": [
			"src/**/*.js"
		],
		"coverageReporters": [
			"lcov",
			"text"
		]
	}
}
